.loading {
  margin: 50rpx auto;
  text-align: center;
}
.loading__text {
  display: inline-block;
  padding-top: 8rpx;
  font-size: 24rpx;
  color: #999;
}
/*
* ====================================
* 三个点加载中
* ====================================
*/
.dot-flashing {
  position: relative;
  margin: 0 auto;
  width: 10px;
  height: 10px;
  border-radius: 5px;
  background-color: #ff6714;
  color: #ff6714;
  animation: dotFlashing 1s infinite linear alternate;
  animation-delay: .5s;
}

.dot-flashing::before, .dot-flashing::after {
  content: '';
  display: inline-block;
  position: absolute;
  top: 0;
}

.dot-flashing::before {
  left: -15px;
  width: 10px;
  height: 10px;
  border-radius: 5px;
  background-color: #ff6714;
  color: #ff6714;
  animation: dotFlashing 1s infinite alternate;
  animation-delay: 0s;
}

.dot-flashing::after {
  left: 15px;
  width: 10px;
  height: 10px;
  border-radius: 5px;
  background-color: #ff6714;
  color: #ff6714;
  animation: dotFlashing 1s infinite alternate;
  animation-delay: 1s;
}

@keyframes dotFlashing {
  0% {
    background-color: #ff6714;
  }
  100% {
    background-color: #ffac7f;
  }
}

/*
* ====================================
* 没有相关数据
* ====================================
*/
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.empty__icon {
  font-size: 160rpx;
  color: #666;
}
.empty__desc {
  font-size: 28rpx;
  color: #333;
}