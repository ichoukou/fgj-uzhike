/* pages/organizational/select/index.wxss */
page {
  background-color: #fff;
}
.search {
  overflow: hidden;
  padding: 0 24rpx;
  background-color: #fff; 
}
.search__content {
  position: relative;
  margin-top: 24rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
  width: 100%;
  height: 60rpx;
  background-color: rgb(241,241,241);
}
.search__icon {
  position: absolute;
  left: 16rpx;
  top: 0;
  display: flex;
  align-items: center;
  height: 60rpx;
  font-size: 32rpx;
  color: rgb(210,210,210);
}
.search__input {
  padding-left: 60rpx;
  font-size: 28rpx;
  min-height: 60rpx;
  color: #333;
}
.select {
  position: absolute;
  top: 100rpx;
  bottom: 0;
  width: 100%;
}
.select-list {
}
.select-list__title {
  position:-webkit-sticky;
  position: sticky;
  top: 0;
  display: block;
  padding-left: 30rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #f5f5f5;
}
.select-list__text {
  display: block;
  padding-left: 30rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}
.select-list__text + .select-list__text {
  border-top: 1rpx solid #ddd;
}
.nav {
  display: flex;
  align-items: center;
  position: absolute;
  top: 100rpx;
  right: 20rpx;
  bottom: 0;
  z-index: 2;
}
.nav-content {
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  background-color: #f2f2f2;
}
.nav-content__list {
  display: inline-block;
  padding: 10rpx;
  font-size: 32rpx;
  color: #666;
  text-align: center;
}
.nav-show {
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 10;
  margin-left: -50rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  width: 100rpx;
  font-size: 40rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, .5);
  text-align: center;
}