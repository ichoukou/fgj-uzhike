
page {
  position: relative;
  height: 100%;
}

.search {
  overflow: hidden;
  padding: 0 24rpx;
  background-color: #fff; 
}
.search__content {
  position: relative;
  margin-top: 24rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
  width: 100%;
  height: 60rpx;
  background-color: rgb(241,241,241);
}
.search__icon {
  position: absolute;
  left: 16rpx;
  top: 0;
  display: flex;
  align-items: center;
  height: 60rpx;
  font-size: 32rpx;
  color: rgb(210,210,210);
}
.search__input {
  padding-left: 60rpx;
  font-size: 28rpx;
  min-height: 60rpx;
  color: rgb(210,210,210);
}
.nav {
  display: flex;
  align-items: center;
  padding-left: 24rpx;
  border-bottom: 1rpx solid #e6e6e6;
  width: 100%;
  height: 68rpx;
  background-color: #fff;
}
.nav__item {
  padding: 0 4rpx;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 24rpx;
  color: #222;
}
.nav__iconfont:first-child {
  display: none;
}
.nav__item--disable {
  color: #999;
}
.nav__iconfont {
  color: #e6e6e6;
}
.content {
  overflow: hidden;
  position: absolute;
  top: 196rpx;
  bottom: 100rpx;
  width: 100%;
}
.content__item {
  overflow: hidden;
  position: relative;
  padding-left: 30rpx;
  width: 100%;
  height: 130rpx;
  line-height: 130rpx;
  background-color: #fff;
}
.content__item + .content__item {
  border-top: 1rpx solid #e6e6e6;
}
.content__item--void.content__item + .content__item--void.content__item {
  border-top: 1rpx solid #fff;
} 
.content__item--void {
  background-color: #e6e6e6;
}
.content__item--void .content__operation {
  color: #fff;
}
.content__text {
  position: relative;
  z-index: 2;
  transition: all .3s;
}
.content__operation { 
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 3;
  width: 130rpx;
  height: 100%;
  font-size: 42rpx;
  color: rgb(193,193,193);
}
.footer {
  border-top: 1rpx solid #e6e6e6;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}
.footer__new {
  flex: 1;
  font-size: 32rpx;
  color: #ff6714;
  text-align: center;
}