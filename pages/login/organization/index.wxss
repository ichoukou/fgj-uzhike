
.container {
  display: flex;
  flex-direction: column;
}
.scroll-list {
  flex: 1;
  position: absolute;
  top: 0;
  bottom: 98rpx;
  background: #fff;
}
.list-item {
  border-top: 1rpx solid #f2f2f2;
}
.item {
  position: relative;
  height: 130rpx;
  line-height: 130rpx;
  margin: 0 24rpx;
  border-bottom: 1rpx solid #f2f2f2;

}
.radio {
  position: absolute;
  right: 0;
}
.footer {
  display: flex;
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  background: #fff;
}
.footer-text {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #ff6714;
}

