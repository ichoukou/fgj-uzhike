<view class="content">
  <view class="list-wrap">

    <view class="list">
      <text class="list__title">当前层级</text>
      <view class="list__content">
        <input class="list__input" type="text" disabled value="{{ParentNote}}" />
      </view>
    </view>
    <view class="list">
      <text class="list__title">名称</text>
      <view class="list__content">
        <input class="list__input" type="text" disabled="{{PurviewID}}" value="{{params.PurviewName}}" bindinput="changePurviewName" placeholder="请填写名称" />
      </view>
    </view>
    <view class="list">
      <text class="list__title">索引</text>
      <view class="list__content">
         <input class="list__input" type="number" value="{{params.PurviewIndex}}" bindinput="changePurviewIndex" placeholder="请填写索引" /> 
      </view>
    </view>
    <view class="list">
      <text class="list__title">备注名</text>
      <view class="list__content">
         <input class="list__input" type="text" value="{{params.PurviewNote}}" bindinput="changePurviewNote" placeholder="请填写备注名" /> 
      </view>
    </view>
    <view class="list" wx:if="{{params.LevelType === '2'}}">
      <text class="list__title">权限类型</text>
      <view class="list__content">
        <picker mode="selector" bindchange="bindPickerChange" data-name="pickerTypeIndex" value="{{pickerTypeIndex}}" range="{{pickerType}}">
         <text class="list__picker">{{pickerType[pickerTypeIndex]}}</text>
        </picker>
      </view>
      <text class="iconfont icon-jiantou2 list__arrow"></text>
    </view>
    <view class="list" wx:if="{{params.LevelType !== '0'}}">
      <text class="list__title">价值额</text>
      <view class="list__content">
         <input class="list__input" type="number" value="{{params.Cost}}" bindinput="changeCost" placeholder="请填写价值额" /> 
      </view>
    </view>
    <view class="list" wx:if="{{params.LevelType !== '0'}}">
      <text class="list__title">公司类型</text>
      <view class="list__content" bindtap="bindNeedActionSheet">
        <text class="list__picker">{{params.NeedType}}</text>
      </view>
      <text class="iconfont icon-jiantou2 list__arrow"></text>
    </view>
    <view class="list" wx:if="{{params.LevelType === '2'}}">
      <text class="list__title">权限价值</text>
      <view class="list__content">
         <picker mode="selector" bindchange="bindPickerChange" data-name="pickerValueIndex" value="{{pickerValueIndex}}" range="{{pickerValue}}" range-key="name">
         <text class="list__picker">{{pickerValue[pickerValueIndex].name}}</text>
          </picker>
      </view>
      <text class="iconfont icon-jiantou2 list__arrow"></text>
    </view>
    <view class="list" wx:if="{{params.LevelType !== '0'}}">
      <text class="list__title">是否显示</text>
      <view class="list__content list__switch">
        <switch checked="{{params.DenyOP == 1}}" color="#ff6714" bindchange="switchChange"/>
      </view>
    </view>

  </view>
</view>

<view class="footer">
  <button class="btn-primery" loading="{{loading}}" disabled="{{disabled}}" bindtap="bindSubmit">
    <text hidden="{{loading}}">完成</text>
  </button>
</view>

<i-message id="message" />