/* pages/index/index.wxss */
.container {
  position: absolute;
  top: 0;
  bottom: 96rpx;
}
.top {
  position: absolute;
  top: -150rpx;
  width: 100%;
  height: 300rpx;
  line-height: 330rpx;
  background: #fa7730;
  color: #fff;
  border-radius: 50% / 50%;
}
.top-text {
  margin-left: 40rpx;
  margin-bottom: 10rpx;
}
.city {
  font-size: 18rpx;
}
.box {
  position: relative;
  width: 94%;
  height: 210rpx;
  margin: 30rpx auto;
  padding-top: 10rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(251, 130, 57, 0.5);
  overflow: hidden;
}
.box-title {
  margin: 0 0 30rpx 16rpx;
  font-family: "PingFang-SC-Medium";
  font-size: 30rpx;
}
.more {
  float: right;
  margin-right: 18rpx;
  font-size: 24rpx;
  color: #c1c1c1;
}
.sub-title {
  font-size: 24rpx;
  color: #c1c1c1;
}
.box-content {
  width: 100%;
}
.box-item {
  display: inline-block;
  width: 25%;
  margin-bottom: 40rpx;
  text-align: center;
}
.item-title {
  font-size: 24rpx;
  color: #232323;
}
image {
  width: 76rpx;
  height: 76rpx; 
}
.split {
  width: 100%;
  height: 1rpx;
}

.footer {
  position: fixed;
  display: flex;
  align-items: center;
  width: 100%;
  height: 96rpx;
  bottom: 0;
  background: #fff;
}
.footer-item {
  flex: 1;
  text-align: center; 
  color: #bababa;
}
.ba {
  width: 40rpx;
  height: 40rpx;
}
.footer-title {
  font-size: 18rpx;
}
.cur {
  background:  linear-gradient(90deg, #FFBD67 0%, #FA7730 100%);
  -webkit-background-clip: text;
  color: transparent;
}
.navigator-hover {
  background-color: transparent;
}