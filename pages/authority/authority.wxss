/*
  新建组按钮
*/
.new-group {
  position: fixed;
  bottom: 60rpx;
  right: 60rpx;
  z-index: 9;
  box-shadow: 0 2px 5px 0 rgba(0,0,0,.16), 0 2px 10px 0 rgba(0,0,0,.12);
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  font-size: 14px;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  background-image: linear-gradient(90deg, #FFBD67 0%, #FA7730 100%);
}
.new-group.active {
  animation: scale-opacity .3s linear;
}


/*
  结构
*/
.weui-flex {
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.btn-blue {
  background-color: #2196f3;
}
.btn-red {
  background-color: #f44336;
}
.weui-cells {
  margin-top: 0;
  opacity: 0;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  -webkit-transition: 0.3s;
  transition: 0.3s;
}

.weui-cells:after, .weui-cells:before {
  display: none;
}

.weui-cells_show {
  opacity: 1;
  -webkit-transform: translateY(0);
  transform: translateY(0);
}
.weui-cell:before {
  right: 30rpx;
}

.kind-list__item {
  position: relative;
  margin: 20rpx 0;
  background-color: #fff;
  border-radius: 4rpx;
  overflow: hidden;
  
  box-shadow: 0 0px 4px 0 rgba(0,0,0,.16);
}

.kind-list__item:first-child {
  margin-top: 0;
}

.kind-list__item-hd {
  position: relative;
  z-index: 2;
  padding: 40rpx;
  background-color: #fff;
  -webkit-transition: opacity 0.3s;
  transition: opacity 0.3s;
}

.kind-list__item-hd_show {
  /* opacity: 0.4; */
}
.weui-cell__ft_in-access {
  transition: transform .3s;
}
.kind-list__item-hd_show .weui-cell__ft_in-access {
  transform: rotate(90deg);
}


.kind-list__item-bd {
  padding-left: 30rpx;  
  height: 0;
  overflow: hidden;
}

.kind-list__item-bd_show {
  padding-left: 30rpx;  
  height: auto;
  border-top: 1rpx solid #d9d9d9; 
}

.table-item {
  padding: 30rpx 40rpx;
}
.other-button-hover {
  opacity: .5;
}
.operation {
  display: flex;
  overflow: hidden;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 1;
}
.operation-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  border: 0;
  border-radius: 0;
  padding: 0;
  width: 152rpx;
  height: 100%;
  font-size: 32rpx;
  color: #fff;
}
.operation-btn:after {
  border: none;
}
.operation-btn-group {
  height: 131rpx;
}
.operation-btn-table {
  height: 108rpx;
}
.operation-btn-item {
  height: 88rpx;
}
.list-transition {
  transition: all .3s;
}
.table-item-wrap {
  position: relative;
  border-bottom: 1rpx solid #d9d9d9;
}
.item-list {  
  position: relative;
}
.item-list + .item-list {
  border-top: 1px solid #d9d9d9;
}
.item-list-type {
  font-size: 14px;
  color: #666;
}
.item-list-title {
  position: relative;
  z-index: 2;
  background-color: #fff;
}