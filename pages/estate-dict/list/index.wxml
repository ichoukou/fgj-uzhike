          </view>
          <view class="list__tag-wrap">
            <text class="list__tag list__tag--1">核心商业圈</text>
            <text class="list__tag list__tag--2">中心地段</text>
            <text class="list__tag list__tag--3">交通便利</text>
          </view>
          <text class="iconfont icon-gengduo icon-more"></text>
        </view>
      </view>
    </view>
  </scroll-view>
</view>
