.container {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 100rpx;
  left: 0;
  z-index: 1;
}
.title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #bababa;
  padding-left: 24rpx; 
}
.basic, .need, .advance {
  padding: 0 24rpx;
  background: #fff;
}
.input-item {
  display: flex;
  align-items: center;
  height: 130rpx;
  background: #fff;
}
.input-item + .input-item {
  border-top: 1rpx solid rgb(230,230,230);
}
.textarea__title-border {
  border-top: 1rpx solid rgb(230,230,230);
}
.input-title {
  width: 300rpx;
}
.input {
  flex: 1;
}
picker {
  flex: 1;
}
.star {
  font-size: 30rpx;
  color: red;
}
.icon-jiantou2 {
  color: #d2d2d2;
  transform: rotate(180deg);
}
.phcolor {
  color: #c9c9c9;
}
textarea {
  width: 100%;
  /* margin-top: 10rpx; */
  height: 140rpx;
}
.input-range .input-title {
  width: 200rpx;
}
.range {
  width: 170rpx;
  padding-left: 10rpx; 
  background: #f5f5f5;
  border-radius: 6rpx;
}
.phrange {
  color: #c9c9c9;
  text-align: center
}
.line {
  margin: 0 20rpx;
}
.unit {
  margin-left: 20rpx;
}
.add {
  margin-top: 20rpx;
  padding: 0 24rpx;
}
.add .input-title {
  flex: 1;
}
.icon-tianjia {
  font-size: 22rpx;
  color: #dbdbdb;
}
.advance {
  margin-bottom: 40rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%; 
  height: 98rpx;
  display: flex;
  align-items: center;
  background: #fff;
  z-index: 999;
}
.footer-text {
  flex: 1;
  margin: 0 35rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(90deg, #FFBD67 0%, #FA7730 100%);
  color: #fff;
  border-radius: 6rpx;
}
.body-view {
  flex: 1;
}

.input__text {
  flex: 1;
  line-height: 130rpx;
}

/* 关联人 */
.link-wrap {
  background-color: #fff;
}
.link__list {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  width: 100%;
  height: 130rpx;
  border-top: 1rpx solid rgb(230,230,230);
}
.link__pic {
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  background-color: #FA7730;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
}
.link__content {
  flex: 1;
  padding: 0 20rpx;
}
.link__con-name {
  font-size: 30rpx;
  color: #000;
}
.link__con-tel {
  margin-top: 16rpx;
  font-size: 30rpx;
  color: rgb(201,201,201);
}
.link__close {
  position: relative;
  height: 130rpx;
  line-height: 130rpx;
}
.link__close::before {
  content: "";
  position: absolute;
  left: -20rpx;
  right: -20rpx;
}
.link__icon-close {
  font-size: 40rpx;
  color: rgb(201,201,201);
}