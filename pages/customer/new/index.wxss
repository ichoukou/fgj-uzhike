.container {
  position: absolute;
  top: 0;
  bottom: 100rpx;
}
.title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #bababa;
  padding-left: 24rpx; 
}
.basic, .need, .advance {
  padding: 0 24rpx;
  background: #fff;
}
.input-item {
  display: flex;
  align-items: center;
  height: 130rpx;
  background: #fff;
}
.input-title {
  width: 300rpx;
}
.input {
  flex: 1;
}
.star {
  font-size: 30rpx;
  color: red;
}
.icon-jiantou2 {
  color: #d2d2d2;
  transform: rotate(180deg);
}
.phcolor {
  color: #c9c9c9;
}
textarea {
  width: 100%;
  margin-top: 10rpx;
  height: 140rpx;
}
.input-range .input-title {
  width: 200rpx;
}
.range {
  width: 170rpx;
  padding-left: 10rpx; 
  background: #f5f5f5;
  border-radius: 6rpx;
}
.phrange {
  color: #c9c9c9;
  text-align: center
}
.line {
  margin: 0 20rpx;
}
.unit {
  margin-left: 20rpx;
}
.add {
  padding: 0 24rpx;
}
.add .input-title {
  flex: 1;
}
.icon-tianjia {
  font-size: 22rpx;
  color: #dbdbdb;
}
.advance {
  margin-bottom: 40rpx;
}
.advance .input-item {
  border-bottom: 1rpx solid #f2f2f2;
}

.footer {
  position: absolute;
  bottom: 0;
  width: 100%; 
  height: 98rpx;
  display: flex;
  align-items: center;
  background: #fff;
}
.footer-text {
  flex: 1; 
  margin: 0 35rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(90deg, #FFBD67 0%, #FA7730 100%);
  color: #fff;
  border-radius: 6rpx;
}