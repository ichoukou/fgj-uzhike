/* 报备详细 */
.inquiry-wrap {
  position: absolute;
  top: 288rpx;
  right: 0;
  bottom: 0;
  left: 0;
}
.inquiry-list {
  overflow: hidden;
  padding: 0 24rpx;
}
.inquiry__item {
  margin: 20rpx 0;
  padding: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 8rpx rgba(209, 209, 209, .4);
  background-color: #fff;
}
.inquiry__top {
  position: relative;
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx dotted #f5f5f5;
}
.inquiry__top::after,
.inquiry__top::before {
  content: "";
  position: absolute;
  bottom: -15rpx;
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  background-color: #F8F8F8;
}
.inquiry__top::after {
  left: -35rpx;
}
.inquiry__top::before {
  right: -35rpx;
}
.inquiry__top-l {
  flex: 1;
}
.inquiry__name {
  font-size: 36rpx;
  font-weight: 500;
  color: #121212;
}
.inquiry__tel {
  padding-left: 20rpx;
  font-size: 30rpx;
  color: #333;
}
.inquiry__project {
  padding-top: 12rpx;
  font-size: 30rpx;
  color: #333;
}
.inquiry__btn {
  margin-left: 20rpx;
  padding: 16rpx 26rpx;
  border-radius: 60rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #fe6c1b;
}
