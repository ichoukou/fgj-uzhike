.inquiry__row {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.inquiry__title {
  font-size: 24rpx;
  color: #c1c1c1;
}
.inquiry__time {
  font-size: 30rpx;
  color: #333;
}
.inquiry__tag {
  margin-left: 20rpx;
  border: 1rpx solid #fa4d31;
  border-radius: 30rpx;
  padding: 4rpx 8rpx;
  font-size: 20rpx;
  color: #fa4d31;
}