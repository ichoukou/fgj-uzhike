.container {
  padding: 0 24rpx;
  background: #fff;
  border-top: 1rpx solid #f2f2f2;
}

textarea {
  width: 100%;
  padding: 20rpx 0;
  height: 400rpx;
}
.phcolor {
  color: #bababa;
}
.tip {
  display: flex;
  justify-content: flex-end;
  font-size: 18rpx;
  color: #bababa;
  margin-bottom: 20rpx;
}
.item-list {
  display: flex;
  align-items: center;
  height: 90rpx;
  border-top: 1rpx solid #f2f2f2;
}
.list-text {
  flex: 1;
  margin-left: 30rpx;
  color: #313131;
}
.iconfont {
  color: #313131;
  font-size: 48rpx;
}
.icon-jiantou2 {
  transform: rotate(180deg);
  color: #d2d2d2;
  font-size: 36rpx;
}
.footer {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 106rpx;
  padding: 0 35rpx;
  background: #fff;
}
.footer text {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(90deg, #FFBD67 0%, #FA7730 100%);
  color: #fff;
  border-radius: 6rpx;
}
