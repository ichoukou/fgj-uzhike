
.follow {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}
.follow__text {
  position: relative;
  padding: 20rpx;
  height: 400rpx;
  background-color: #fff;
  word-wrap: break-word;
  font-size: 30rpx;
  line-height: 1.5;
}
.textarea {
  width: 100%;
}

/* 类型 */
.foolow__type {
  position: relative;
  display: flex;
  flex-wrap: nowrap;
}
.type__item {
  display: inline-block;
  flex: 0 0 180rpx;
  padding: 0 10rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  white-space: nowrap;
  background-color: #fff;
}
.type__line {
  position: absolute;
  bottom: 0;
  left: 40rpx;
  width: 100rpx;
  height: 4rpx;
  background-color: #ff6714;
  transition: transform .3s;
}

.footer {
  position: fixed;
  left: 0;
  width: 100%;
  background-color:#fff;
}
.footer__btn {
  display: flex; 
  width: 100%;
  line-height: 80rpx;
  text-align: center;
}
.footer__icon {
  width: 80rpx;
  height: 80rpx;
  color: #666;
}
.footer__send {
  margin-left: auto;
  padding: 0 20rpx;
  height: 80rpx;
}