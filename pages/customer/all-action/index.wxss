.action {
  position: relative;
  padding: 0 26rpx;
  background: #fff;
}
.action-item {
  display: flex;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f2f2f2;
}
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-top: 22rpx;
}
.img {
  width: 140rpx;
  height: 108rpx;
  margin-right: 12rpx;
}
.message {
  flex: 1;
  margin-top: 16rpx;
  margin-left: 22rpx;
}
.message .name {
  font-size: 30rpx;
  font-weight: normal;
  margin-right: 20rpx;
}
.message .tel {
  margin-right: 20rpx;
}
.message .time {
  font-size: 24rpx;
  color: #c9c9c9;
}
.message .info {
  margin-top: 10rpx;
  background: #f5f5f5;
  padding: 18rpx; 
  border-radius: 8rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  /* display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;   */
}
 .message .info .text {
  overflow: hidden;
} 
.info.pics {
  background: #fff;
  padding: 0;
}
.textcolor {
  color: #FA7831;
}